<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f2d5">


    <TextView
        android:id="@+id/ExaminationTxt"
        android:layout_width="309dp"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="EXAMINATION MODE - Click on &quot;EYES EXAMINATION&quot; -> Choose acuity number -> Calibrate face distance -> Take off your glasses -> Choose the smallest line that you see -> Get zoomed image -> Choose smallest line that you see -> Finish  (You can't go back at any stage at this mode) "
        android:textColor="#2d8659"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegularTxt" />

    <TextView
        android:id="@+id/RegularTxt"
        android:layout_width="309dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text='REGULAR MODE - click on "GET STARTED" -> Choose eyes acuity -> Choose Frequency setting -> Calibrate face distance -> Get zoomed image -> You may upload image'
        android:textColor="#2d8659"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/HelpBackBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExaminationTxt"
        app:layout_constraintVertical_bias="1.0" />

